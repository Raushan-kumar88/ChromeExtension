{
  "manifest_version": 3,
  "name": "Auto-Save Notepad",
  "version": "1.0",
  "description": "A simple notepad extension with auto-save feature",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
